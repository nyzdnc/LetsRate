<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="@drawable/recyclerview_bg"
    >

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/recyclerRowImageBox"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/my_rates"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/recyclerRowRatePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#1951DF" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/recyclerRowProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="#2196F3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Comment Title"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/recyclerRowCommentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textColor="#2196F3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Seller Name"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/recyclerRowSellerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Name"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Commet Details"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/recyclerRowCommentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment descriptions"
            android:textColor="#2196F3"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:maxLines="3"
            android:lines="5"/>

        <Button
            android:id="@+id/dltBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:textSize="20dp"/>

    </LinearLayout>



</LinearLayout>